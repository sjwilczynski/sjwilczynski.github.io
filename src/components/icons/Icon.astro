---
import { Icon as AstroIcon } from "astro-icon/components";

export type Props = {
  name: string;
  class?: string;
};

const { name, class: className = "" } = Astro.props;
---

<style>
  .icon {
    width: 1em;
    height: 1em;
    vertical-align: -0.125em;
    fill: currentColor;
  }
</style>

<AstroIcon name={name} class={"icon " + className} />
