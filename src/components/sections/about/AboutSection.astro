---
import SocialMedias from "./SocialMedias.astro";
import type { About, SocialMedia } from "@data/types";

export type Props = {
  about: About;
  socialMedias: SocialMedia[];
};

const { about, socialMedias } = Astro.props;
---

<style>
  @media (width <= 390px) {
    h1 {
      font-size: 4rem;
      line-height: 4.5rem;
    }
  }
  @media (width <= 290px) {
    h1 {
      font-size: 3rem;
      line-height: 3.5rem;
    }
  }
</style>

<h1 class="mb-0">
  {about.name}
  <span class="text-primary"> {about.surname}</span>
</h1>
<div class="subheading mb-5">
  {about.city}, {about.country},
  <a href={"mailto:" + about.email}> {about.email}</a>
</div>
<div class="lead mb-5">{about.introduction}</div>
<SocialMedias socialMedias={socialMedias} />
